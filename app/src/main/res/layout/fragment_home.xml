<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBF4F4"
    tools:context=".HomeFragment">

        <RelativeLayout
            android:id="@+id/rfirst"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:baselineAligned="false">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"

                    android:text="Feeling Hungry ?"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#02785D"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="Order And Eat"
                    android:textColor="@color/seagreen"
                    android:textSize="20sp" />
            </LinearLayout>


            <ImageView
                android:id="@+id/icart"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="35dp"
                android:scaleType="fitXY"
                android:layout_centerVertical="true"
                android:src="@drawable/cart" />

            <TextView
                android:id="@+id/nitemcart"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/badge_shape"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="32dp"
                android:text="0"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:textColor="@color/white"/>

        </RelativeLayout>

<!--        <EditText-->
<!--            android:id="@+id/editsearch"-->
<!--            android:layout_below="@+id/rfirst"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="50dp"-->
<!--            android:background="@drawable/search_background"-->
